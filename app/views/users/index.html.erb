<h2>Users</h2>

<table class="<%= get_table_class%>">
  <thead>
  <tr>
    <th>User login</th>
    <th>User nicename</th>
    <th>User email</th>
    <th>User URL</th>
    <th>Display name</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.user_login %></td>
        <td><%= user.user_nicename %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to user.user_url, user.user_url %>
        </td>
        <td><%= user.display_name %></td>
        <td><%= link_to 'Show', user %>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
