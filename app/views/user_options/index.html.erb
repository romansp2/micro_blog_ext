<h2>User Options</h2>

<table class="<%= get_table_class%>">
  <thead>
    <tr>
      <th>User</th>
      <th>Option key</th>
      <th>Option value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_options.each do |user_option| %>
      <tr>
        <td><%= user_option.user %></td>
        <td><%= user_option.option_key %></td>
        <td><%= user_option.option_value %></td>
        <td><%= link_to 'Show', user_option %></td>
        <td><%= link_to 'Edit', edit_user_option_path(user_option) %></td>
        <td><%= link_to 'Destroy', user_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

