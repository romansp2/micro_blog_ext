<h2>Term Taxonomies</h2>

<table class="<%= get_table_class%>">
  <thead>
    <tr>
      <th>Term</th>
      <th>Taxonomy</th>
      <th>Description</th>
      <th>Parent</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @term_taxonomies.each do |term_taxonomy| %>
      <tr>
        <td><%= term_taxonomy.term_id %></td>
        <td><%= term_taxonomy.taxonomy %></td>
        <td><%= term_taxonomy.description %></td>
        <td><%= term_taxonomy.parent %></td>
        <td><%= term_taxonomy.count %></td>
        <td><%= link_to 'Show', term_taxonomy %></td>
        <td><%= link_to 'Edit', edit_term_taxonomy_path(term_taxonomy) %></td>
        <td><%= link_to 'Destroy', term_taxonomy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Term Taxonomy', new_term_taxonomy_path %>
